<?xml version="1.0" encoding="UTF-8"?>
<config xmlns="http://www.chiknrice.org/djeng">

    <codecs>
        <codec-filter id="lvar" class="org.chiknrice.djeng.fin.LengthPrefixCodec"/>
        <codec-filter id="array" class="org.chiknrice.djeng.ArrayCodec"/>
        <element-codec id="string" class="org.chiknrice.djeng.fin.StringCodec">
            <filter codec="lvar"/>
        </element-codec>
        <composite-codec id="message" class="org.chiknrice.djeng.fin.PlainCompositeCodec"/>
        <composite-codec id="arr-lvar-composite" class="org.chiknrice.djeng.fin.PlainCompositeCodec">
            <filter codec="lvar"/>
            <filter codec="array"/>
        </composite-codec>
    </codecs>
    <message-elements codec="message">
        <element index="1" codec="string"/>
        <composite index="2" codec="arr-lvar-composite">
            <element index="1" codec="string"/>
        </composite>
    </message-elements>

</config>